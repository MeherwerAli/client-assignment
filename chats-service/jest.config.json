{
  "roots": ["<rootDir>/test"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.test.ts?$",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{ts,js}", "!src/**/*.d.ts", "!src/api/Interface/*", "!src/api/models/enums/*"],
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "maxWorkers": 1,
  "testTimeout": 3000,
  "clearMocks": true,
  "resetMocks": true
}
